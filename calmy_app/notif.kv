<NotifScreen>:
    name: "notif"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1

        MDButton:
            style: "filled"
            pos_hint: {"center_x": 0.10, "center_y": 0.925}
            theme_bg_color: "Custom"
            md_bg_color: (1, 1, 1, 1)
            size_hint_x: 1
            on_release:
                app.go_back()

            MDButtonIcon:
                icon: "chevron-left"
                theme_icon_color: "Custom"
                icon_color: (0.125, 0.227, 0.290, 1)
                theme_font_size: "Custom"
                font_size: "30sp"

            MDButtonText:
                text: "BACK"
                theme_text_color: "Custom"
                theme_font_size: "Custom"
                font_size: "24sp"
                text_color: (0.125, 0.227, 0.290, 1)
                theme_font_name: "Custom"
                font_name: "Poppins-Medium"
        
        MDLabel:
            text: "- NOTIFIKASI -"
            pos_hint: {"center_x": .5, "center_y": .905}
            theme_text_color: "Custom"
            text_color: (0.125, 0.227, 0.290, 1)
            theme_font_name: "Custom"
            theme_font_size: "Custom"
            font_size: "32sp"
            font_name: "Poppins-Bold"
            halign: "center"

        MDLabel:
            text: "Belum ada notifikasi untuk saat ini!"
            pos_hint: {"center_x": .5, "center_y": .75}
            theme_text_color: "Custom"
            text_color: (0.125, 0.227, 0.290, 1)
            theme_font_name: "Custom"
            theme_font_size: "Custom"
            font_size: "20sp"
            font_name: "Poppins-SemiBold"
            halign: "center"

        MDDivider:
            pos_hint: {"center_x": .5, "center_y": .67}
            divider_width: "1.5dp"
            color: (0.125, 0.227, 0.290, 0.65)