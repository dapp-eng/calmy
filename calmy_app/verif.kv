<VerifScreen>:
    name: "verif"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1

        MDCard:
            size_hint: None, None
            size: "450dp", "625dp"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            elevation: 10
            theme_bg_color: "Custom"
            md_bg_color: (0.125, 0.227, 0.290, 1)
            padding: "5dp"
            orientation: "vertical"
            focus_color: (0.125, 0.227, 0.290, 0)
            unfocus_color: (0.125, 0.227, 0.290, 1)
            
            RelativeLayout:

                MDButton:
                    style: "filled"
                    pos_hint: {"center_x": 0.13, "center_y": 0.96}
                    theme_bg_color: "Custom"
                    md_bg_color: (0.125, 0.227, 0.290, 1)
                    size_hint_x: 1
                    on_release:
                        app.go_back()

                    MDButtonIcon:
                        icon: "chevron-left"
                        theme_icon_color: "Custom"
                        icon_color: (1, 1, 1, 1)

                    MDButtonText:
                        text: "BACK"
                        theme_text_color: "Custom"
                        theme_font_size: "Custom"
                        font_size: "18sp"
                        text_color: (1, 1, 1, 1)
                        theme_font_name: "Custom"
                        font_name: "Poppins-Medium"

                MDLabel:
                    text: "- V E R I F Y -"
                    pos_hint: {"center_x": .5, "center_y": .87}
                    theme_text_color: "Custom"
                    text_color: (1, 1, 1, 1)
                    theme_font_name: "Custom"
                    theme_font_size: "Custom"
                    font_size: "40sp"
                    font_name: "Poppins-Bold"
                    halign: "center"

                MDLabel:
                    text: "Verifikasi Diri"
                    pos_hint: {"center_x": .5, "center_y": .81}
                    theme_text_color: "Custom"
                    text_color: (1, 1, 1, 1)
                    theme_font_name: "Custom"
                    theme_font_size: "Custom"
                    font_size: "20sp"
                    font_name: "Poppins-SemiBold"
                    halign: "center"
                
                MDLabel:
                    text: "Untuk memastikan bahwa ini benar-benar Anda, silahkan masukkan Nama Lengkap dan Tanggal Lahir yang telah Anda daftarkan sebelumnya!"
                    pos_hint: {"center_x": .5, "center_y": .66}
                    theme_text_color: "Custom"
                    text_color: (1, 1, 1, 1)
                    theme_font_name: "Custom"
                    theme_font_size: "Custom"
                    font_size: "15sp"
                    font_name: "Poppins-Medium"
                    halign: "center"
                    padding: "27dp"
                
                MDTextField:
                    id: namalengkap
                    mode: "outlined"
                    size_hint_x: None
                    width: "400dp"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    theme_text_color: "Custom"
                    text_color_normal: (1, 1, 1, 1)
                    text_color_focus: (1, 1, 1, 1)
                    theme_line_color: "Custom"
                    line_color_normal: (1, 1, 1, 0.6)
                    line_color_focus: (1, 1, 1, 1)
                    on_text: root.clear_error()

                    MDTextFieldTrailingIcon:
                        icon: "card-account-details-outline"
                        theme_icon_color: "Custom"
                        icon_color_normal: (1, 1, 1, 1)
                        icon_color_focus: (1, 1, 1, 1)

                    MDTextFieldHintText:
                        text: "Masukkan Nama Lengkap"
                        text_color_normal: (1, 1, 1, 0.8)
                        text_color_focus: (1, 1, 1, 1)
                    
                    MDTextFieldHelperText:
                        text: "Contoh format nama yang benar: 'Budi Man'"
                        mode: "persistent"
                        theme_text_color: "Custom"
                        text_color_normal: (1, 1, 1, 0.7)
                        text_color_focus: (1, 1, 1, 0.7)
                
                MDTextField:
                    id: tanggal_lahir
                    mode: "outlined"
                    size_hint_x: None
                    width: "400dp"
                    pos_hint: {"center_x": .5, "center_y": .35}
                    theme_text_color: "Custom"
                    text_color_normal: (1, 1, 1, 1)
                    text_color_focus: (1, 1, 1, 1)
                    theme_line_color: "Custom"
                    line_color_normal: (1, 1, 1, 0.6)
                    line_color_focus: (1, 1, 1, 1)
                    error_color: "FF0000FF"
                    validator: "date"
                    date_format: "dd/mm/yyyy"

                    MDTextFieldTrailingIcon:
                        icon: "calendar"
                        theme_icon_color: "Custom"
                        icon_color_normal: (1, 1, 1, 1)
                        icon_color_focus: (1, 1, 1, 1)

                    MDTextFieldHintText:
                        id: hint
                        text: "DD/MM/YYYY"
                        text_color_normal: (1, 1, 1, 0.8)
                        text_color_focus: (1, 1, 1, 1)
                    
                    MDTextFieldHelperText:
                        text: "Masukkan tanggal lahir sesuai format!"
                        mode: "persistent"
                        theme_text_color: "Custom"
                        text_color_normal: (1, 1, 1, 0.7)
                        text_color_focus: (1, 1, 1, 0.7)
                
                MDLabel:
                    id: error_label
                    text: ""
                    theme_font_name: "Custom"
                    font_name: "Poppins-Medium"
                    theme_font_size: "Custom"
                    font_size: "15sp"
                    pos_hint: {"center_x": .5, "center_y": .175}
                    theme_text_color: "Custom"
                    text_color: (1, 0, 0, 1)
                    halign: "center"
                    padding: "20sp"

                MDButton:
                    style: "filled"
                    pos_hint: {"center_x": .5, "center_y": .10}
                    theme_bg_color: "Custom"
                    md_bg_color: (1, 1, 1, 1)
                    size_hint: None, None
                    size: 135, 50
                    theme_width: "Custom"
                    on_release:
                        root.validate()

                    MDButtonText:
                        text: "VERIFY"
                        theme_text_color: "Custom"
                        text_color: (0.125, 0.227, 0.290, 1)
                        theme_font_name: "Custom"
                        theme_font_size: "Custom"
                        font_size: "16sp"
                        font_name: "Poppins-SemiBold"
                        halign: "center"
                        pos_hint: {"center_x": .5, "center_y": .5}