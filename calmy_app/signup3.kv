<Signup3Screen>:
    name: "signup3"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1

        MDCard:
            size_hint: None, None
            size: "450dp", "625dp"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            elevation: 10
            theme_bg_color: "Custom"
            md_bg_color: (0.125, 0.227, 0.290, 1)
            padding: "5dp"
            orientation: "vertical"
            focus_color: (0.125, 0.227, 0.290, 0)
            unfocus_color: (0.125, 0.227, 0.290, 1)
            
            RelativeLayout:

                MDButton:
                    style: "filled"
                    pos_hint: {"center_x": 0.13, "center_y": 0.96}
                    theme_bg_color: "Custom"
                    md_bg_color: (0.125, 0.227, 0.290, 1)
                    size_hint_x: 1
                    on_release:
                        app.change_screen("signup2", "fade")

                    MDButtonIcon:
                        icon: "chevron-left"
                        theme_icon_color: "Custom"
                        icon_color: (1, 1, 1, 1)

                    MDButtonText:
                        text: "BACK"
                        theme_text_color: "Custom"
                        theme_font_size: "Custom"
                        font_size: "18sp"
                        text_color: (1, 1, 1, 1)
                        theme_font_name: "Custom"
                        font_name: "Poppins-Medium"

                MDLabel:
                    text: "- S I G N  U P -"
                    pos_hint: {"center_x": .5, "center_y": .87}
                    theme_text_color: "Custom"
                    text_color: (1, 1, 1, 1)
                    theme_font_name: "Custom"
                    theme_font_size: "Custom"
                    font_size: "40sp"
                    font_name: "Poppins-Bold"
                    halign: "center"

                MDLabel:
                    text: "Pilih program Anda!"
                    pos_hint: {"center_x": .5, "center_y": .80}
                    theme_text_color: "Custom"
                    text_color: (1, 1, 1, 1)
                    theme_font_name: "Custom"
                    theme_font_size: "Custom"
                    font_size: "20sp"
                    font_name: "Poppins-SemiBold"
                    halign: "center"

                MDButton:
                    style: "outlined"
                    pos_hint: {"center_x": .5, "center_y": .65}
                    theme_bg_color: "Custom"
                    md_bg_color: (0.125, 0.227, 0.290, 1)
                    theme_line_color: "Custom"
                    line_color: (1, 1, 1, 1)
                    theme_width: "Custom"
                    size_hint: None, None
                    size: 460, 70
                    radius: [dp(0)]
                    on_release:
                        root.select_button(self)

                    MDButtonText:
                        text: "Penurunan Berat Badan"
                        theme_text_color: "Custom"
                        text_color: (1, 1, 1, 1)
                        theme_font_name: "Custom"
                        theme_font_size: "Custom"
                        font_size: "18sp"
                        font_name: "Poppins-Medium"
                        halign: "center"
                        pos_hint: {"center_x": .5, "center_y": .5}
                
                MDButton:
                    style: "outlined"
                    pos_hint: {"center_x": .5, "center_y": .50}
                    theme_bg_color: "Custom"
                    md_bg_color: (0.125, 0.227, 0.290, 1)
                    theme_line_color: "Custom"
                    line_color: (1, 1, 1, 1)
                    theme_width: "Custom"
                    size_hint: None, None
                    size: 460, 70
                    radius: [dp(0)]
                    on_release:
                        root.select_button(self)

                    MDButtonText:
                        text: "Pertahankan Berat Badan"
                        theme_text_color: "Custom"
                        text_color: (1, 1, 1, 1)
                        theme_font_name: "Custom"
                        theme_font_size: "Custom"
                        font_size: "18sp"
                        font_name: "Poppins-Medium"
                        halign: "center"
                        pos_hint: {"center_x": .5, "center_y": .5}

                MDButton:
                    style: "outlined"
                    pos_hint: {"center_x": .5, "center_y": .35}
                    theme_bg_color: "Custom"
                    md_bg_color: (0.125, 0.227, 0.290, 1)
                    theme_line_color: "Custom"
                    line_color: (1, 1, 1, 1)
                    theme_width: "Custom"
                    size_hint: None, None
                    size: 460, 70
                    radius: [dp(0)]
                    on_release:
                        root.select_button(self)

                    MDButtonText:
                        text: "Peningkatan Berat Badan"
                        theme_text_color: "Custom"
                        text_color: (1, 1, 1, 1)
                        theme_font_name: "Custom"
                        theme_font_size: "Custom"
                        font_size: "18sp"
                        font_name: "Poppins-Medium"
                        halign: "center"
                        pos_hint: {"center_x": .5, "center_y": .5}
                
                MDLabel:
                    id: error_label
                    text: ""
                    theme_font_name: "Custom"
                    font_name: "Poppins-Medium"
                    theme_font_size: "Custom"
                    font_size: "16sp"
                    pos_hint: {"center_x": .5, "center_y": .15}
                    theme_text_color: "Custom"
                    text_color: 1, 0, 0, 1
                    halign: "center"

                MDButton:
                    style: "outlined"
                    pos_hint: {"center_x": 0.5, "center_y": 0.07}
                    theme_bg_color: "Custom"
                    md_bg_color: (0.125, 0.227, 0.290, 1)
                    size_hint_x: 1
                    on_release:
                        root.next_screen()

                    MDButtonIcon:
                        icon: "chevron-right"
                        theme_icon_color: "Custom"
                        icon_color: (1, 1, 1, 1)

                    MDButtonText:
                        text: "NEXT"
                        theme_text_color: "Custom"
                        theme_font_size: "Custom"
                        font_size: "20sp"
                        text_color: (1, 1, 1, 1)
                        theme_font_name: "Custom"
                        font_name: "Poppins-Medium"