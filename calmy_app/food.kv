<FoodScreen>:
    name: "food"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1

        MDCard:
            size_hint: None, None
            size: "550dp", "725dp"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            elevation: 10
            theme_bg_color: "Custom"
            md_bg_color: (0.125, 0.227, 0.290, 1)
            padding: "5dp"
            orientation: "vertical"
            focus_color: (0.125, 0.227, 0.290, 0)
            unfocus_color: (0.125, 0.227, 0.290, 1)
            
            RelativeLayout:

                MDButton:
                    style: "filled"
                    pos_hint: {"center_x": 0.13, "center_y": 0.96}
                    theme_bg_color: "Custom"
                    md_bg_color: (0.125, 0.227, 0.290, 1)
                    size_hint_x: 1
                    on_release:
                        root.reset_checkboxes()

                    MDButtonIcon:
                        icon: "chevron-left"
                        theme_icon_color: "Custom"
                        icon_color: (1, 1, 1, 1)

                    MDButtonText:
                        text: "BACK"
                        theme_text_color: "Custom"
                        theme_font_size: "Custom"
                        font_size: "18sp"
                        text_color: (1, 1, 1, 1)
                        theme_font_name: "Custom"
                        font_name: "Poppins-Medium"
                
                MDLabel:
                    text: "- CHOOSE FOOD -"
                    pos_hint: {"center_x": .5, "center_y": .89}
                    theme_text_color: "Custom"
                    text_color: (1, 1, 1, 1)
                    theme_font_name: "Custom"
                    theme_font_size: "Custom"
                    font_size: "38sp"
                    font_name: "Poppins-Bold"
                    halign: "center"
                
                MDLabel:
                    text: "Silahkan ketikkan dan pilih makanan yang telah Anda konsumsi."
                    pos_hint: {"center_x": .5, "center_y": .843}
                    theme_text_color: "Custom"
                    text_color: (1, 1, 1, 1)
                    theme_font_name: "Custom"
                    theme_font_size: "Custom"
                    font_size: "15sp"
                    font_name: "Poppins-Medium"
                    halign: "center"
                    padding: "25dp"
                
                MDBoxLayout:
                    md_bg_color: 1, 1, 1, 1
                    padding: "20dp"
                    size_hint: 0.925, 0.775
                    pos_hint: {"center_x": .5, "center_y": .42}
                    radius: [15,]
                    orientation: "vertical"

                    RelativeLayout:

                        MDTextField:
                            id: search_field
                            mode: "outlined"
                            size_hint_x: 0.915
                            radius: [15,]
                            pos_hint: {"center_x": .5, "center_y": .935}
                            theme_text_color: "Custom"
                            text_color_normal: (0.125, 0.227, 0.290, 1)
                            text_color_focus: (0.125, 0.227, 0.290, 1)
                            theme_line_color: "Custom"
                            line_color_normal: (0.125, 0.227, 0.290, 0.6)
                            line_color_focus: (0.125, 0.227, 0.290, 1)
                            on_text: root.on_search_text(self.text)

                            MDTextFieldTrailingIcon:
                                icon: "magnify"
                                theme_icon_color: "Custom"
                                icon_color_normal: (0.125, 0.227, 0.290, 1)
                                icon_color_focus: (0.125, 0.227, 0.290, 1)

                            MDTextFieldHintText:
                                id: hint
                                text: "Cari makanan..."
                                text_color_normal: (0.125, 0.227, 0.290, 0.8)
                                text_color_focus: (0.125, 0.227, 0.290, 1)

                        ScrollView:
                            pos_hint: {"center_x": .5, "center_y": .485}
                            size_hint: 1, 0.725

                            MDBoxLayout:
                                id: food_list
                                orientation: "vertical"
                                size_hint_y: None
                                height: self.minimum_height
                        
                        MDLabel:
                            id: food_selected
                            text: "Makanan dipilih: 0"
                            pos_hint: {"center_x": .195, "center_y": .045}
                            theme_text_color: "Custom"
                            text_color: (0.988, 0.671, 0.196, 1)
                            theme_font_name: "Custom"
                            theme_font_size: "Custom"
                            font_size: "15sp"
                            font_name: "Poppins-SemiBold"
                            halign: "center"
                            padding: "25dp"
                        
                        MDButton:
                            style: "filled"
                            pos_hint: {"center_x": .835, "center_y": .045}
                            theme_bg_color: "Custom"
                            md_bg_color: (0.125, 0.227, 0.290, 1)
                            size_hint: None, None
                            size: 150, 50
                            theme_width: "Custom"
                            on_release:
                                root.save_checked_food()

                            MDButtonText:
                                text: "SIMPAN"
                                theme_text_color: "Custom"
                                text_color: (1, 1, 1, 1)
                                theme_font_name: "Custom"
                                theme_font_size: "Custom"
                                font_size: "16sp"
                                font_name: "Poppins-SemiBold"
                                halign: "center"
                                pos_hint: {"center_x": .5, "center_y": .5}
                        